@{
    ViewBag.Title = "Settings - TrackEdge";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TrackEdge</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="~/Content/style.css">
</head>
<body>
    <style>
        .settings-container {
            max-width: 1000px;
            margin: auto;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-top: 30px;
        }

            .settings-container h2 {
                text-align: center;
                color: #2C3E50;
                margin-bottom: 20px;
            }

        .settings-section {
            margin-bottom: 25px;
        }

            .settings-section h3 {
                color: #2C3E50;
                margin-bottom: 10px;
            }

            .settings-section p {
                font-size: 16px;
                color: #34495E;
            }

        .form-group {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
            align-items: center;
        }

            .form-group input,
            .form-group select {
                padding: 10px;
                width: 60%;
                border-radius: 5px;
                border: 1px solid #BDC3C7;
            }

            .form-group label {
                width: 35%;
                font-size: 16px;
                font-weight: bold;
                color: #2C3E50;
            }

        .image-upload {
            text-align: center;
        }

            .image-upload img {
                max-width: 150px;
                border-radius: 50%;
                margin-bottom: 10px;
            }

        .save-btn {
            display: block;
            width: 100%;
            padding: 15px;
            background-color: #2C3E50;
            color: white;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .save-btn:hover {
                background-color: #34495E;
            }
    </style>

    <!-- Content -->
    <div class="content-area">
        <div class="settings-container">
            <h2>Settings</h2>

            <!-- Profile Settings Section -->
            <div class="settings-section">
                <h3>Profile Settings</h3>
                <div class="image-upload">
                    <label for="profileImage">Profile Picture:</label>
                    <input type="file" id="profileImage" name="profileImage" accept="image/*">
                    <img src="@Url.Content("~/Content/images/default-profile.png")" alt="Profile Image" id="currentProfileImage" />
                </div>

                <div class="form-group">
                    <label for="fullName">Full Name:</label>
                    <input type="text" id="fullName" name="fullName" value="@Model.FullName">
                </div>

                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" value="@Model.Email">
                </div>
            </div>

            <!-- Account Settings Section -->
            <div class="settings-section">
                <h3>Account Settings</h3>
                <div class="form-group">
                    <label for="password">Change Password:</label>
                    <input type="password" id="password" name="password">
                </div>

                <div class="form-group">
                    <label for="language">Language Preference:</label>
                    <select id="language" name="language">
                        <option value="English">English</option>
                        <option value="Kannada">Kannada</option>
                        <option value="Hindi">Hindi</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="notifications">Notifications:</label>
                    <select id="notifications" name="notifications">
                        <option value="email">Email</option>
                        <option value="sms">SMS</option>
                        <option value="both">Both</option>
                        <option value="none">None</option>
                    </select>
                </div>
            </div>

            <!-- Privacy Settings Section -->
            <div class="settings-section">
                <h3>Privacy Settings</h3>
                <div class="form-group">
                    <label for="profileVisibility">Profile Visibility:</label>
                    <select id="profileVisibility" name="profileVisibility">
                        <option value="public">Public</option>
                        <option value="private">Private</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="taskReminders">Task Reminders:</label>
                    <select id="taskReminders" name="taskReminders">
                        <option value="enabled">Enabled</option>
                        <option value="disabled">Disabled</option>
                    </select>
                </div>
            </div>

            <!-- App Settings Section -->
            <div class="settings-section">
                <h3>App Settings</h3>
                <div class="form-group">
                    <label for="theme">Theme:</label>
                    <select id="theme" name="theme">
                        <option value="light">Light Mode</option>
                        <option value="dark">Dark Mode</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="fontSize">Font Size:</label>
                    <select id="fontSize" name="fontSize">
                        <option value="small">Small</option>
                        <option value="medium">Medium</option>
                        <option value="large">Large</option>
                    </select>
                </div>
            </div>

            <!-- Support Section -->
            <div class="settings-section">
                <h3>Support</h3>
                <div class="form-group">
                    <a href="@Url.Action("Help", "Home")" class="save-btn">Help & FAQ</a>
                    <a href="@Url.Action("ContactSupport", "Home")" class="save-btn">Contact Support</a>
                </div>
            </div>

            <!-- Save Button -->
            <button class="save-btn">Save Settings</button>
        </div>
    </div>
</body>
</html>
<script>
    document.querySelector('.save-btn').addEventListener('click', function () {
        let formData = new FormData();
        formData.append('fullName', document.getElementById('fullName').value);
        formData.append('email', document.getElementById('email').value);
        formData.append('language', document.getElementById('language').value);
        formData.append('notifications', document.getElementById('notifications').value);
        formData.append('profileVisibility', document.getElementById('profileVisibility').value);
        formData.append('taskReminders', document.getElementById('taskReminders').value);
        formData.append('theme', document.getElementById('theme').value);
        formData.append('fontSize', document.getElementById('fontSize').value);
        formData.append('profileImage', document.getElementById('profileImage').files[0]);

        fetch('/Account/SaveSettings', {
            method: 'POST',
            body: formData
        })
            .then(response => response.json())
            .then(data => {
                alert('Settings saved successfully!');
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error saving settings');
            });
    });

</script>