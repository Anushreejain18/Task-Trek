@{
    ViewBag.Title = "Reset Password";
}

<div class="login-container">
    <div class="login-header">
        <h1>Reset Password</h1>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <p class="error">@ViewBag.Error</p>
    }
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <p class="success">@ViewBag.Message</p>
    }

    <div class="login-content">
        <form method="post" action="/Account/ResetPassword" onsubmit="return validateForm(event)">
            <input type="hidden" name="username" value="@ViewBag.Username" />

            <div class="form-group">
                <label for="newPassword">New Password:</label>
                <div class="password-wrapper">
                    <input type="password" id="newPassword" name="newPassword" placeholder="Enter new password" />
                    <span class="toggle-password" onclick="togglePassword('newPassword', 'eyeIconNew')">
                        <img id="eyeIconNew" src="https://cdn-icons-png.flaticon.com/512/159/159604.png" alt="Show" />
                    </span>
                </div>
                <span id="newPasswordError" class="error-message"></span>
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm Password:</label>
                <div class="password-wrapper">
                    <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm new password" />
                    <span class="toggle-password" onclick="togglePassword('confirmPassword', 'eyeIconConfirm')">
                        <img id="eyeIconConfirm" src="https://cdn-icons-png.flaticon.com/512/159/159604.png" alt="Show" />
                    </span>
                </div>
                <span id="confirmPasswordError" class="error-message"></span>
            </div>

            <button type="submit">Reset Password</button>
        </form>
    </div>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        height: 100vh;
        width: 100vw;
        background: #F0F2F5;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .login-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        width: 100vw;
        height: calc(100vh - 50px);
        background: #FFFFFF;
    }

    .login-header {
        padding: 40px;
        background: #EAECEF;
        color: #333;
        width: 100%;
        text-align: center;
    }

    h1 {
        font-size: 42px;
        font-weight: bold;
        color: #212529;
    }

    .login-content {
        flex-grow: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
    }

    .form-group {
        margin-bottom: 20px;
        text-align: left;
        position: relative;
    }

        .form-group label {
            font-size: 18px;
            font-weight: bold;
            display: block;
            color: #333;
        }

        .form-group input {
            width: 90%;
            padding: 14px;
            font-size: 18px;
            border: 2px solid #333;
            border-radius: 12px;
            outline: none;
        }

    .password-wrapper {
        width: 102%;
        position: relative;
        display: flex;
        align-items: center;
    }

    .toggle-password {
        position: absolute;
        right: 12px;
        cursor: pointer;
    }

        .toggle-password img {
            width: 24px;
            height: 24px;
        }

    .error {
        color: red;
        font-size: 18px;
        font-weight: bold;
    }

    .error-message {
        color: red;
        font-size: 14px;
        margin-top: 5px;
        display: block;
    }

    .success {
        color: green;
        font-size: 20px;
        margin-bottom: 20px;
        text-align: center;
    }

    button {
        width: 100%;
        padding: 16px;
        font-size: 20px;
        font-weight: bold;
        background: #2C3E50;
        color: white;
        border: none;
        border-radius: 12px;
        cursor: pointer;
        box-shadow: 0 8px 20px rgba(200, 200, 200, 0.5);
        transition: all 0.3s ease;
    }

        button:hover {
            background: #3E5668;
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(44, 62, 80, 0.7);
        }
</style>

<script>
    function validateForm(event) {
        let newPassword = document.getElementById("newPassword").value.trim();
        let confirmPassword = document.getElementById("confirmPassword").value.trim();
        let newPasswordError = document.getElementById("newPasswordError");
        let confirmPasswordError = document.getElementById("confirmPasswordError");
        let isValid = true;

        newPasswordError.textContent = "";
        confirmPasswordError.textContent = "";

        if (newPassword === "") {
            newPasswordError.textContent = "Please enter a new password.";
            isValid = false;
        } else if (newPassword.length < 6) {
            newPasswordError.textContent = "Password must be at least 6 characters.";
            isValid = false;
        }

        if (confirmPassword === "") {
            confirmPasswordError.textContent = "Please confirm your password.";
            isValid = false;
        } else if (newPassword !== confirmPassword) {
            confirmPasswordError.textContent = "Passwords do not match.";
            isValid = false;
        }

        if (!isValid) {
            event.preventDefault();
        }
    }

    function togglePassword(fieldId, iconId) {
        let passwordField = document.getElementById(fieldId);
        let eyeIcon = document.getElementById(iconId);

        if (passwordField.type === "password") {
            passwordField.type = "text";
            eyeIcon.src = "https://cdn-icons-png.flaticon.com/512/159/159605.png";
        } else {
            passwordField.type = "password";
            eyeIcon.src = "https://cdn-icons-png.flaticon.com/512/159/159604.png";
        }
    }
</script>
