
@{
    ViewBag.Title = "Forgot Password";
}

<div class="login-container">
    <div class="login-header">
        <h1>Forgot Password</h1>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
    <p class="error">@ViewBag.Error</p>
    }
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
    <p class="success">@ViewBag.Message</p>
    }

    <div class="login-content">
        <form method="post" action="/Account/ForgotPassword" onsubmit="return validateForm()">
            <div class="form-group">
                <label for="username">Enter your Username:</label>
                <input type="text" id="username" name="username" placeholder="Enter your username" />
                <span id="usernameError" class="error-message"></span>
            </div>

            <button type="submit">Submit</button>
        </form>
    </div>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        height: 100vh;
        width: 100vw;
        background: #F0F2F5;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .login-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        width: 100vw;
        height: calc(100vh - 50px);
        background: #FFFFFF;
    }

    .login-header {
        padding: 40px;
        background: #EAECEF;
        color: #333;
        width: 100%;
        text-align: center;
    }

    h1 {
        font-size: 42px;
        font-weight: bold;
        color: #212529;
    }

    .login-content {
        flex-grow: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
    }

    .form-group {
        margin-bottom: 20px;
        text-align: left;
        position: relative;
    }

        .form-group label {
            font-size: 18px;
            font-weight: bold;
            display: block;
            color: #333;
        }

        .form-group input {
            width: 90%;
            padding: 14px;
            font-size: 18px;
            border: 2px solid #333;
            border-radius: 12px;
            outline: none;
        }

    .error-message {
        color: red;
        font-size: 14px;
        margin-top: 5px;
        display: block;
    }

    .success {
        color: green;
        font-size: 20px;
        margin-bottom: 20px;
        text-align: center;
    }

    .error {
        color: red;
        font-size: 20px;
        margin-bottom: 20px;
        text-align: center;
    }

    button {
        width: 100%;
        padding: 16px;
        font-size: 20px;
        font-weight: bold;
        background: #2C3E50;
        color: white;
        border: none;
        border-radius: 12px;
        cursor: pointer;
        box-shadow: 0 8px 20px rgba(200, 200, 200, 0.5);
        transition: all 0.3s ease;
    }

        button:hover {
            background: #3E5668;
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(44, 62, 80, 0.7);
        }
</style>

<script>
    function validateForm() {
        let username = document.getElementById("username").value;
        let isValid = true;

        document.getElementById("usernameError").textContent = "";

        if (username.trim() === "") {
            document.getElementById("usernameError").textContent = "Please enter your username.";
            isValid = false;
        }

        return isValid;
    }
</script>
